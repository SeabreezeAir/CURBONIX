FROM python:3.11-slim

WORKDIR /app

COPY adapter_api.py /app/
COPY generate_adapter.py /app/
COPY geometry /app/geometry
COPY data /app/data
COPY exports /app/exports

RUN pip install --no-cache-dir fastapi uvicorn pydantic

EXPOSE 8000

CMD ["uvicorn", "adapter_api:app", "--host", "0.0.0.0", "--port", "8000"]
